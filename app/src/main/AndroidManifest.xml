<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="diogenes.br.com.contadorestoque">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".principal.ScanCodeActivity"
            android:label="@string/title_activity_scan_code"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="userLandscape"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".principal.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".principal.Consultar" />
        <activity android:name=".principal.Configuracao" />
        <activity android:name=".principal.ExportarActivity" />
    </application>

</manifest>